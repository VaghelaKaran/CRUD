<!doctype html>
<html lang="en">  
  <body>
    
    <nav class="navbar navbar-dark bg-mynav">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Manage Employee</a>
      </div>
    </nav>

    <div class="container">
      <div class="d-flex bd-highlight mb-3">
        <div class="me-auto p-2 bd-highlight"><h2>Employee</div>
        <div class="p-2 bd-highlight">
          
           <a href="/AddEmp" class="btn btn-secondary">Create</a>
        </div>
      </div>
      
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
               <th>#ID</th>
                <th>Profile Pic</th>
      <th>Name</th>
      <th>Email</th>
      <th>Mobile_No</th>
       <th scope="col">Action</th>
            </tr>
          </thead>
         {{#each Employees}}
      <tr>
        <td  class="eid">{{this.EId }}</td>
         <td><img class="card__image" src="{{this.Profile}}" alt="User Profile"></td>
        <td >{{this.Name}}</td>
        <td  >{{this.Email}}</td>
        <td >{{this.Mobile_No}}</td>
        <td>
            <a href="/edit-form/{{this.EId}}" class="btn btn-info btn-sm">Edit</a>
            <a href="/delete/{{this.EId}}" class="btn btn-danger btn-sm">Delete</a>
        </td>
      </tr>
      
    {{/each}}
        </table>
      </div>
    </div>

  </body>
</html>